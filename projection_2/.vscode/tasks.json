{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build program",
            "type": "shell",
            "command": "cd",
            "args": [
                "build && cmake .. && make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run program",
            "type": "shell",
            "command": "cd",
            "args": [
                "build && cmake .. && make && ./skeleton"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}